<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/deviceHistoryPageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device history"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="40dp"
            android:textSize="24dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/deviceHistoryRecyclerview"
            android:layout_width="wrap_content"
            android:layout_height="650dp"
            app:layout_constraintTop_toBottomOf="@id/deviceHistoryPageTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="32dp"
            />

        <Button
            android:id="@+id/editWhitelistButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="32dp"
            android:text="MANAGE WHITELIST"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/whitelistFrame">
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>